<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="40dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung_tieu_de"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Đổi mật khẩu"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            app:passwordToggleEnabled="true"
            android:id="@+id/inMKHienTai">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edMKHienTai"
                android:inputType="textPassword"
                android:hint="Nhập mật khẩu hiện tại"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/inMKMoi">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edMKMoi"
                android:inputType="textPassword"
                android:hint="Nhập mật khẩu mới"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/inNhapLaiMK">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edNhapLaiMK"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:text="Lưu"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="@drawable/button"
                android:id="@+id/btnLuuMK"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="Hủy"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:id="@+id/btnHuyLuu"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
